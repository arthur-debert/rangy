if [ ! -d .venv ]; then
    echo "Creating virtual environment .venv"
    python3 -m venv .venv

fi
source .venv/bin/activate &&\
    echo "Installing dependencies" &&\
     pip install --upgrade pip &&\
     pip install poetry &&\
     poetry install --with dev --with docs &&\
     echo "Running tests" &&\
     echo "We're ready to go" &&\
     pytest .
