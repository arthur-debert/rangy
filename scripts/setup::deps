if [ ! -d .venv ]; then
    echo "Venv should be created, see setup::venv.sh"
    exit 1

fi
source .venv/bin/activate &&\
    echo "Installing dependencies" &&\
     pip install --upgrade pip &&\
     pip install poetry &&\
     poetry install --with dev --with docs &&\
     echo "Running tests" &&\
     echo "We're ready to go" &&\
     pytest .
